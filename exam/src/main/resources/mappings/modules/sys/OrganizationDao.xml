            </if>
            <if test="deputyPerson != null and deputyPerson.id != null">
                #{deputyPerson.id}
            </if>
        </trim>
    </insert>

    <update id="update">
		UPDATE t_sys_organization
		<set>
            <if test="parentId != null">
			  parent_id = #{parentId},
            </if>
            <if test="parentIds != null">
			  parent_ids = CAST(string_to_array(#{parentIds}, ',') AS INTEGER[]),
