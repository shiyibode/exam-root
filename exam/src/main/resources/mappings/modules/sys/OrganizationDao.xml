            </if>
        </set>
		WHERE id = #{id}
	</update>

    <update id="updateParentIds">
		UPDATE t_sys_organization SET 
			parent_ids = CAST(string_to_array(#{parentIds}, ',') AS INTEGER[])
		WHERE id = #{id}
	</update>

    <update id="delete">
        UPDATE t_sys_organization SET
        del_flag = #{DEL_FLAG_DELETE}
        WHERE id = #{id} OR parent_ids @> CAST(ARRAY[#{id}] AS INTEGER[])
    </update>

